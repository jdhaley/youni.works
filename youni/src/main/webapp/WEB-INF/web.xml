<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>youni.works</display-name>
  <servlet>
    <servlet-name>fs</servlet-name>
    <servlet-class>youniworks.FileServlet</servlet-class>
    <init-param>
       <param-name>directory</param-name>
       <param-value>/web/repositories/youni.works/youni/src/main/webapp/fs</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>youni</servlet-name>
    <url-pattern>/file</url-pattern>
  </servlet-mapping>
  <mime-mapping>
        <extension>mjs</extension>
        <mime-type>text/javascript</mime-type>
  </mime-mapping>
</web-app>
